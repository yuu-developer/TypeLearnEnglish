<h1>タイピング練習</h1>

<div class="form-container">
  <%= form_with url: practices_path, method: :post, local: true do |form| %>
    <div class="form-group">
      <%= form.label :difficulty_level, "難易度を選択してください" %>
      <%= form.select :difficulty_level, @difficulty_levels, { class: "form-control" } %>
    </div>

    <%= form.submit "Start", class: "btn btn-primary" %>
  <% end %>
</div>