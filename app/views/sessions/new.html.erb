<%= form_with(url: login_path, local: true, html: { class: 'login-form' }) do |f| %> 
  <% if flash[:alert] %>
    <div id="error_explanation" class="error_explanation">
      <h2><%= flash[:alert] %></h2>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email, "メールアドレス", class: 'form-label' %> 
    <%= f.email_field :email, class: 'form-input' %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード", class: 'form-label' %> 
    <%= f.password_field :password, class: 'form-input' %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class: 'btn btn-primary' %>
  </div>
<% end %>

<style>
  .login-form {
    max-width: 400px;
    margin: 50px auto;
    padding: 20px;
    background: #f7f7f7;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .login-form .field {
    margin-bottom: 20px;
  }

  .form-label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
    color: #333;
  }

  .form-input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
    font-size: 1rem;
  }

  .form-input:focus {
    border-color: #007bff;
    outline: none;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  }

  .btn-primary {
    display: block;
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    border: none;
    color: white;
    font-size: 1rem;
    border-radius: 5px;
    cursor: pointer;
    text-align: center;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  .error_explanation {
    margin-bottom: 20px;
    padding: 10px;
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
    border-radius: 5px;
  }

  .error_explanation h2 {
    margin: 0;
    font-size: 1rem;
  }
</style>
