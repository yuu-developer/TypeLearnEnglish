<%= form_with(url: login_path, local: true) do |f| %> <% if flash[:alert] %>
<div id="error_explanation" class="error_explanation">
  <h2><%= flash[:alert] %></h2>
</div>
<% end %>

<div class="field">
  <%= f.label :email, "メールアドレス" %> <%= f.email_field :email %>
</div>

<div class="field">
  <%= f.label :password, "パスワード" %> <%= f.password_field :password %>
</div>

<div class="actions"><%= f.submit "ログイン" %></div>
<% end %>
